<h1>New Game</h1>

<br>
<div class="container">
<ul>
<% @random_letters.each do |letter| %>
  <li class="li-letter"><%= letter %></li>
<% end %>
</ul>
</div>

<form action="/score" method="post" data-turbo="false">
  <label for="word">What's the longest word you can find ?</label>
  <div class="inputs">
    <input type="text" name="word">
    <input type="submit" value="Play">
    <%= hidden_field_tag :letters, @random_letters %>
    <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  </div>
</form>
